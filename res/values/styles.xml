<resources>

    <style name="wide_edit_text" parent="EditTextsocialtheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_edit_text" parent="EditTextsocialtheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_button" parent="Buttonsocialtheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wide_button" parent="Buttonsocialtheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wide">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="stretchTall">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="stretchWide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Sherlock theme generator -->
    <style name="Theme.socialtheme" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_socialtheme</item>
        <item name="popupMenuStyle">@style/socialtheme_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/socialtheme_DropDownListView</item>
        <item name="actionBarTabStyle">@style/socialtheme_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/socialtheme_DropDownNav</item>
        <item name="actionBarStyle">@style/socialtheme_solid_ActionBar</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background_socialtheme</item>
        <item name="android:popupMenuStyle">@style/socialtheme_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/socialtheme_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/socialtheme_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/socialtheme_DropDownNav</item>
        <item name="android:actionBarStyle">@style/socialtheme_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_socialtheme</item>


        <item name="android:editTextStyle">@style/EditTextsocialtheme</item>
        <item name="android:checkboxStyle">@style/CheckBoxsocialtheme</item>
        <item name="android:radioButtonStyle">@style/RadioButtonsocialtheme</item>
        <item name="android:buttonStyle">@style/Buttonsocialtheme</item>
        <item name="android:imageButtonStyle">@style/ImageButtonsocialtheme</item>
        <item name="android:spinnerStyle">@style/Spinnersocialtheme</item>
        <item name="android:dropDownSpinnerStyle">@style/Spinnersocialtheme.DropDown</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItemsocialtheme</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarsocialtheme</item>
        <item name="android:seekBarStyle">@style/SeekBarsocialtheme</item>
        <item name="android:ratingBarStyle">@style/RatingBarsocialtheme</item>
        <item name="android:ratingBarStyleIndicator">@style/RatingBarBigsocialtheme</item>
        <item name="android:ratingBarStyleSmall">@style/RatingBarSmallsocialtheme</item>
        <item name="android:buttonStyleToggle">@style/Togglesocialtheme</item>
        <item name="android:listViewStyle">@style/ListViewsocialtheme</item>
        <item name="android:listViewWhiteStyle">@style/ListViewsocialtheme.White</item>

    </style>

    <style name="socialtheme_solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_socialtheme</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_socialtheme</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_socialtheme</item>
        <item name="progressBarStyle">@style/socialtheme_ProgressBar</item>

        <item name="android:background">@drawable/ab_solid_socialtheme</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_socialtheme</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_socialtheme</item>
        <item name="android:progressBarStyle">@style/socialtheme_ProgressBar</item>
    </style>

    <style name="socialtheme_transparent_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_socialtheme</item>
        <item name="progressBarStyle">@style/socialtheme_ProgressBar</item>

        <item name="android:background">@drawable/ab_transparent_socialtheme</item>
        <item name="android:progressBarStyle">@style/socialtheme_ProgressBar</item>
    </style>

    <style name="socialtheme_PopupMenu" parent="@style/Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_socialtheme</item>
    </style>

    <style name="socialtheme_DropDownListView" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_socialtheme</item>
    </style>

    <style name="socialtheme_ActionBarTabStyle" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_socialtheme</item>

        <item name="android:background">@drawable/tab_indicator_ab_socialtheme</item>
    </style>

    <style name="socialtheme_DropDownNav" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_socialtheme</item>

        <item name="android:background">@drawable/spinner_background_ab_socialtheme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_socialtheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_socialtheme</item>
    </style>

    <style name="socialtheme_ProgressBar" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_socialtheme</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.socialtheme.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/socialtheme_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/socialtheme_DropDownListView</item>

        <item name="android:popupMenuStyle">@style/socialtheme_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/socialtheme_DropDownListView</item>
    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="socialtheme_DropDownItem" parent="@style/Widget.Sherlock.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="socialtheme_SpinnerItem" parent="@style/Widget.Sherlock.TextView.SpinnerItem">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>


    <style name="EditTextsocialtheme" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_holo_light</item>
    </style>

    <style name="CheckBoxsocialtheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_holo_light</item>
    </style>

    <style name="RadioButtonsocialtheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_holo_light</item>
    </style>

    <style name="Buttonsocialtheme" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonsocialtheme" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/btn_default_holo_light</item>
    </style>

    <style name="Spinnersocialtheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background_holo_light</item>
    </style>

    <style name="Spinnersocialtheme.DropDown">
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerItemsocialtheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/btn_radio_holo_light</item>
    </style>
    <style name="ProgressBarsocialtheme" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="SeekBarsocialtheme" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo_light</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="RatingBarsocialtheme" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_full_holo_light</item>
    </style>

    <style name="RatingBarBigsocialtheme">
        <item name="android:progressDrawable">@drawable/ratingbar_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_holo_light</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:maxHeight">35dip</item>
    </style>

    <style name="RatingBarSmallsocialtheme">
        <item name="android:progressDrawable">@drawable/ratingbar_small_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/ratingbar_small_holo_light</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="Togglesocialtheme" parent="android:Widget.Button.Toggle">
        <item name="android:background">@drawable/btn_toggle_holo_light</item>
        <item name="android:minHeight">48dip</item>
    </style>

    <style name="ListViewsocialtheme" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>

    <style name="ListViewsocialtheme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/list_selector_holo_light</item>
    </style>


</resources>