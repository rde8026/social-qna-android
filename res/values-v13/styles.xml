<resources>

    <style name="wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wide">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="stretchTall">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="stretchWide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Theme.social-qna" parent="@style/Theme.Sherlock.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_social-qna</item>
        <item name="popupMenuStyle">@style/social-qna_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/social-qna_DropDownListView</item>
        <item name="actionBarTabStyle">@style/social-qna_ActionBarTabStyle</item>
        <item name="actionDropDownStyle">@style/social-qna_DropDownNav</item>
        <item name="actionBarStyle">@style/social-qna_solid_ActionBar</item>

        <item name="android:actionBarItemBackground">@drawable/selectable_background_social-qna</item>
        <item name="android:popupMenuStyle">@style/social-qna_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/social-qna_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/social-qna_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/social-qna_DropDownNav</item>
        <item name="android:actionBarStyle">@style/social-qna_solid_ActionBar</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_social-qna</item>


    </style>

    <style name="social-qna_solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_social-qna</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_social-qna</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_social-qna</item>
        <item name="progressBarStyle">@style/social-qna_ProgressBar</item>

        <item name="android:background">@drawable/ab_solid_social-qna</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_social-qna</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_social-qna</item>
        <item name="android:progressBarStyle">@style/social-qna_ProgressBar</item>
    </style>

    <style name="social-qna_transparent_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_social-qna</item>
        <item name="progressBarStyle">@style/social-qna_ProgressBar</item>

        <item name="android:background">@drawable/ab_transparent_social-qna</item>
        <item name="android:progressBarStyle">@style/social-qna_ProgressBar</item>
    </style>

    <style name="social-qna_PopupMenu" parent="@style/Widget.Sherlock.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_social-qna</item>
    </style>

    <style name="social-qna_DropDownListView" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_social-qna</item>
    </style>

    <style name="social-qna_ActionBarTabStyle" parent="@style/Widget.Sherlock.Light.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_social-qna</item>

        <item name="android:background">@drawable/tab_indicator_ab_social-qna</item>
    </style>

    <style name="social-qna_DropDownNav" parent="@style/Widget.Sherlock.Light.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_social-qna</item>

        <item name="android:background">@drawable/spinner_background_ab_social-qna</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_social-qna</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_social-qna</item>
    </style>

    <style name="social-qna_ProgressBar" parent="@style/Widget.Sherlock.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_social-qna</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.social-qna.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/social-qna_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/social-qna_DropDownListView</item>

        <item name="android:popupMenuStyle">@style/social-qna_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/social-qna_DropDownListView</item>
    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="social-qna_DropDownItem" parent="@style/Widget.Sherlock.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="social-qna_SpinnerItem" parent="@style/Widget.Sherlock.TextView.SpinnerItem">
        <item name="android:textAppearance">?android:attr/textAppearanceInverse</item>
    </style>

</resources>